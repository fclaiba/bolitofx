<!doctype html>
<html lang="en">

    <%- include('../partials/head') %> 

<body>
    <%- include('../partials/header') %>

    <main>
        <section>
            <div>
                <div>
                    <div>
                        <div>
                            <h2>Creá tu cuenta</h2>
                            <form action="/users/profile" method="POST" enctype="multipart/form-data">
                                <div>
                                    <input type="text" name="usuario" value="<%= locals.oldData ? oldData.usuario : null %>"/>
                                    <label>Usuario</label>
                                    <% if (locals.errors && errors.usuario) { %>
                                        <div>
                                            <%= errors.usuario.msg  %>
                                        </div>
                                    <% } %>
                                </div>
                                <div>
                                    <input type="" name="email" value="<%= locals.oldData ? oldData.email : null %>"/>
                                    <label>Email</label>
                                    <% if (locals.errors && errors.email) { %>
                                        <div>
                                            <%= errors.email.msg  %>
                                        </div>
                                    <% } %>
                                </div>
                                <div>
                                    <input type="password" name="password"/>
                                    <label>Contraseña</label>
                                    <% if (locals.errors && errors.password) { %>
                                        <div>
                                            <%= errors.password.msg  %>
                                        </div>
                                    <% } %>
                                </div>
                                <div>
                                    <input name="img" type="file" name="img"/>
                                    <label>Seleccionar foto de perfil</label>
                                    <% if (locals.errors && errors.img) { %>
                                        <div>
                                            <%= errors.img.msg  %>
                                        </div>
                                    <% } %>
                                </div>
                                <div>
                                    <input type="checkbox" value="" />
                                    <label>Estoy de acuerdo con todas las declaraciones en <a href="#!"><u>Términos de servicio</u></a>
                                    </label>
                                </div>
                                <div>
                                    <button type="submit">Registrarse</button>
                                </div>
                                <p>Ya tenes una cuenta? 
                                <a href="/users/login"><u>Acceda aquí</u></a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>

</html>
